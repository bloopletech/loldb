#filters-wrapper
  %ul#filters.clearfix
    %li
      %h3 Jump To:
      %a#today Today
      %a#top Top
      %a#end Bottom

    %li#filter
      %h3 Filters:
      %a.trigger All

#filters-content
  %a.close &times;

  #filters-inner
    %a.clear Clear all filters

    %h2 Filter Leagues
    .filter-group
      %ul.filter-list.clearfix
        - source.leagues.each do |league|
          %li{data: { value: league.slug }}= league.name

    %h2 Filter Teams
    .filter-group
      - source.leagues.reject { |league| league.slug == 'MSI' }.each do |league|
        .subgroup.clearfix
          %h3= league.name
          %ul.filter-list.clearfix
            - league.teams.sort_by { |team| team.acronym }.each do |team|
              %li{data: { value: team.acronym }}= team.acronym