#navbar.bar.clearfix
  %h3 Jump To:
  %a#today Today
  %a#top Top
  %a#end Bottom

  %h3 Filters:
  %a.trigger All

  %h3 VOD links:
  %a#surprise-links YouTube

#filters-content
  %a.close &times;

  #filters-inner
    %a.clear Clear all filters

    %h2 Filter Leagues
    .filter-group
      %ul.filter-list.clearfix
        - leagues.each do |league|
          %li{data: { value: league.slug }}= league.name

    %h2 Filter Teams
    .filter-group
      - leagues.each do |league|
        .subgroup.clearfix
          %h3= league.name
          %ul.filter-list.clearfix
            - teams = league.teams.select { |team| team_acronyms.include?(team.acronym) }
            - teams.sort_by { |team| team.acronym }.each do |team|
              %li{data: { value: team.acronym }}= team.acronym