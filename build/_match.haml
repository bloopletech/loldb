.match{class: "#{'live' if match['stream_url']} #{'games' if match['game_urls'].any?} #{match['vs'].join(' ')}", data: { stream_url: match['stream_url'] }}
  - if match['stream_url']
    %a.live-banner{href: match['stream_url'], target: '_blank'} WATCH LIVE
  .time{data: { value: match['time'] }}
  .vs<
    %span.side<
      %span.logo{class: "#{league_name.gsub(' ', '-')}-#{match['vs'].first}"}
      = match['vs'].first
    %span.middle< v
    %span.side<
      %span.logo{class: "#{league_name.gsub(' ', '-')}-#{match['vs'].last}"}
      = match['vs'].last
  - if match['game_urls'].any?
    .vods
      - if match['game_urls'].length == 1
        %a.game{href: match['game_urls'].first, target: '_blank'}
          Game
      - elsif match['game_urls'].length <= 4
        - match['game_urls'].each_with_index do |url, i|
          %a.game{href: url, target: '_blank', class: "#{'revealed' if i == 0}"}
            G#{i + 1}
        %a.reveal &gt;
      - else
        - match['game_urls'].each_with_index do |url, i|
          %a.game{href: url, target: '_blank', class: "#{'revealed' if i == 0}"}
            #{i + 1}
        %a.reveal &gt;

