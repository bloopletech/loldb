.match.clearfix{class: "#{'live' if match.stream_url} #{'games' if match.vod_urls.any?} #{match.league.slug} #{match.team_1.acronym} #{match.team_2.acronym}", data: { stream_url: match.stream_url }}
  .data.league-name= match.league.name
  .data.vs<
    = match.team_1.acronym
    %span.logo{class: match.team_1.slug}
    %span.middle< v
    %span.logo{class: match.team_2.slug}
    = match.team_2.acronym
  .data.time{data: { value: match.rtime.iso8601 }}
  - if match.stream_url
    %a.data.live-banner{href: match.stream_url, target: '_blank'} WATCH LIVE NOW âž”
  - if match.vod_urls.any?
    != partial('vods', { vod_urls: match.vod_urls })