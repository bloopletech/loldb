.match.clearfix{class: "#{'live' if match.stream_url} #{'games' if match.vod_urls.any?} #{match.team_1.acronym} #{match.team_2.acronym}", data: { stream_url: match.stream_url }}
  - if match.stream_url
    %a.live-banner{href: match.stream_url, target: '_blank'} WATCH LIVE NOW
  .time{data: { value: match.time }}
  .league= match.league.name
  .vs<
    %span.side<
      %span.logo{class: match.team_1.slug}
      = match.team_1.acronym
    %span.middle< v
    %span.side<
      %span.logo{class: match.team_2.slug}
      = match.team_2.acronym
  - if match.vod_urls.any?
    != partial('vods', { vod_urls: match.vod_urls })