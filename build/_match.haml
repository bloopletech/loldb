.match{class: "#{'live' if match['stream_url']} #{'games' if match['game_urls'].any?} #{match['vs'].join(' ')}", data: { stream_url: match['stream_url'] }}
  - if match['stream_url']
    %a.live-banner{href: match['stream_url'], target: '_blank'} WATCH LIVE NOW
  .time{data: { value: match['time'] }}
  .vs<
    %span.side<
      %span.logo{class: "#{league_name.gsub(' ', '-')}-#{match['vs'].first}"}
      = match['vs'].first
    %span.middle< v
    %span.side<
      %span.logo{class: "#{league_name.gsub(' ', '-')}-#{match['vs'].last}"}
      = match['vs'].last
  - if match['game_urls'].any?
    != partial('vods', { game_urls: match['game_urls'] })